{
  "expo": {
    "name": "CDE INVERSIONES",
    "slug": "cde-inversiones",
    "version": "1.0.3",
    "icon": "./assets/icon.png",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "updates": {
      "url": "https://u.expo.dev/09df971a-d3b3-481b-9bf7-a737d86596a0"
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "assetBundlePatterns": ["**/*"],

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.cde.inversiones",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceso a tu galería para que puedas subir comprobantes de pago.",
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a tu cámara para que puedas tomar fotos de tus comprobantes de pago."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "versionCode": 2,
      "package": "com.cde.inversiones",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceso a tus fotos para subir los comprobantes de pago.",
          "cameraPermission": "La aplicación necesita acceso a tu cámara para tomar fotos de los comprobantes."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permite usar FaceID para iniciar sesión rápidamente."
        }
      ]
    ],
    "web": {
      "bundler": "metro"
    },
    "scheme": "cde-inversiones",
    "platforms": ["ios", "android", "web"],
    "sdkVersion": "54.0.0",
    "extra": {
      "eas": {
        "projectId": "09df971a-d3b3-481b-9bf7-a737d86596a0"
      }
    }
  }
}
